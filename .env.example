# Telegram Bot API token (from @BotFather)
BOT_TOKEN=your_bot_token_here

# Telegram MTProto credentials (from https://my.telegram.org/apps)
API_ID=12345678
API_HASH=your_api_hash_here

# Database URL
# SQLite (development):
DATABASE_URL=sqlite+aiosqlite:///./data/bot.db
# PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/tg_forward_bot

# Session encryption key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
SESSION_ENCRYPTION_KEY=your_32_byte_fernet_key_here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# DM forwarding settings
# Max file size in MB for forwarding to DM (larger files will be sent as link only)
DM_MAX_MEDIA_SIZE_MB=20

# Optional: Redis for caching/rate limiting (production)
# REDIS_URL=redis://localhost:6379/0
